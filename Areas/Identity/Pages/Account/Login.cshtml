@page
@model LoginModel
@{
    ViewData["Title"] = "Please login to continue...";
}
<head>
    <!-- Page specific CSS -->
    <link href="~/css2/Login.css" rel="stylesheet" />
</head>

<style>
    .mb-3, .h3, h3 {
        color: white;
    }

    footer {
        position: fixed;
    }
</style>

<body class="container-fluid text-center">
    <form id="account" method="post" class="form-signin">
        <img class="mb-4" src="~/img/logo.png" alt="" width="300" height="200">
            <h1 class="h3 mb-3 font-weight-normal">Please sign in to continue...</h1>
                <label asp-for="Input.Email" class="sr-only">Email address</label>
                    <input asp-for="Input.Email" type="email" autocomplete="on" aria-required="true" class="form-control" placeholder="Email address" required="" autofocus="">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <label asp-for="Input.Password" class="sr-only">Password</label>
                    <input asp-for="Input.Password" type="password" autocomplete="on" aria-required="true" class="form-control" placeholder="Password" required="">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>

        <div class="form-container">
            <button id="login-submit" type="submit" class="half-width w-100 btn btn-lg btn-success btn-block">Log in</button>
            <div class="half-width checkbox mb-3">
                <label asp-for="Input.RememberMe">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <div>
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a> | <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend Email Confirmation</a>
            </p>
        </div>
    </form>
</body>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}